{
  "name": "tsdi",
  "version": "0.9.5",
  "description": "Dependency Injection container (IoC) for TypeScript",
  "main": "dist/lib/decorators.js",
  "files": [
    "dist",
    "index.d.ts",
    "lib"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "build": "tsc --sourceMap",
    "postbuild": "cp dist/lib/decorators.d.ts index.d.ts",
    "pretest": "npm run build",
    "test": "mocha -r source-map-support/register dist/tests/",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -w",
    "preversion": "npm test",
    "version": "npm run build && conventional-changelog -p angular -v -r 0 > CHANGELOG.md && git add -A .",
    "postversion": "git push && git push --tags",
    "prepublish": "not-in-install && npm run build || echo 'In install cycle, skipping prepublish'",
    "precoverage": "npm run clean && tsc --inlineSourceMap",
    "coverage": "nyc --reporter lcov ./node_modules/.bin/mocha dist/tests/"
  },
  "author": {
    "name": "Markus Wolf",
    "email": "knister.peter@shadowrun-clan.de"
  },
  "repository": {
    "type": "git",
    "url": "KnisterPeter/tsdi"
  },
  "license": "MIT",
  "devDependencies": {
    "chai": "3.5.0",
    "coveralls": "2.11.15",
    "cz-conventional-changelog": "1.2.0",
    "exorcist": "0.4.0",
    "in-publish": "2.0.0",
    "mocha": "3.2.0",
    "nyc": "10.0.0",
    "rimraf": "2.5.4",
    "source-map-support": "0.4.7",
    "tslint": "4.1.1",
    "typescript": "2.1.4"
  },
  "dependencies": {
    "reflect-metadata": "0.1.8"
  },
  "publishConfig": {
    "tag": "next"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "nyc": {
    "exclude": [
      "node_modules",
      "coverage",
      "dist/tests"
    ]
  }
}
