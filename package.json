{
  "name": "tsdi",
  "version": "0.20.3",
  "description": "Dependency Injection container (IoC) for TypeScript",
  "main": "dist/lib/index.js",
  "module": "dist/esm/lib/index.js",
  "types": "dist/esm/lib/index.d.ts",
  "files": [
    "dist",
    "lib"
  ],
  "engines": {
    "node": ">=10.0.0"
  },
  "scripts": {
    "linter": "tslint --project ./tsconfig.json",
    "clean": "rimraf dist",
    "prebuild": "yarn clean",
    "build": "yarn build:cjs && yarn build:esm",
    "build:cjs": "tsc --sourceMap --module commonjs --outDir dist",
    "build:esm": "tsc --sourceMap --module es2015 --outDir dist/esm",
    "pretest": "yarn build",
    "test": "nyc mocha -r source-map-support/register dist/tests/",
    "prerelease": "git checkout master && git pull origin master && yarn test && yarn build",
    "release": "standard-version",
    "postrelease": "git push --follow-tags origin master && npm publish",
    "precoverage": "yarn clean && tsc --inlineSourceMap",
    "coverage": "codecov",
    "build:watch": "yarn build:cjs -- --watch"
  },
  "author": {
    "name": "Markus Wolf",
    "email": "knister.peter@shadowrun-clan.de"
  },
  "repository": {
    "type": "git",
    "url": "KnisterPeter/tsdi"
  },
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "8.2.0",
    "@commitlint/config-conventional": "8.2.0",
    "@commitlint/travis-cli": "8.2.0",
    "@knisterpeter/standard-tslint": "1.7.2",
    "@types/chai": "4.2.3",
    "@types/debug": "4.1.5",
    "@types/mocha": "5.2.7",
    "@types/node": "12.7.12",
    "chai": "4.2.0",
    "codecov": "3.6.1",
    "cz-conventional-changelog": "3.0.2",
    "husky": "3.0.8",
    "lint-staged": "9.4.2",
    "mocha": "6.2.1",
    "nyc": "12.0.1",
    "prettier": "1.18.2",
    "rimraf": "3.0.0",
    "source-map-support": "0.5.13",
    "standard-version": "7.0.0",
    "tslint": "5.20.0",
    "typescript": "3.6.4"
  },
  "dependencies": {
    "reflect-metadata": "0.1.13"
  },
  "prettier": {
    "singleQuote": true
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "lib/**/*.{ts,tsx}": [
      "npm run linter --",
      "prettier --list-different"
    ],
    "tests/**/*.{ts,tsx}": [
      "npm run linter --",
      "prettier --list-different"
    ]
  },
  "nyc": {
    "exclude": [
      "node_modules",
      "coverage",
      "dist/tests"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  }
}
