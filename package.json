{
  "name": "tsdi",
  "version": "0.21.0",
  "description": "Dependency Injection container (IoC) for TypeScript",
  "source": "lib/index.ts",
  "main": "dist/index.js",
  "umd:main": "dist/index.umd.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "engines": {
    "node": ">=10.0.0"
  },
  "scripts": {
    "linter": "tslint --project ./tsconfig.json",
    "linter:tests": "tslint --project ./tests/tsconfig.json",
    "linter:integration": "tslint --project ./tests/integration/tsconfig.json",
    "clean": "rimraf .nyc_output coverage dist dist-tests",
    "prebuild": "yarn clean",
    "build": "microbundle build",
    "build:watch": "microbundle watch & tsc --project ./tests/tsconfig.json --watch & tsc --project ./tests/integration/tsconfig.json --watch",
    "pretest": "yarn build && tsc --project ./tests/tsconfig.json",
    "test": "nyc mocha dist-tests",
    "coverage": "codecov",
    "integration": "tsc --project ./tests/integration/tsconfig.json",
    "precypress:run": "yarn build && yarn integration",
    "cypress:run": "node ./dist-tests/integration/cypress run $@",
    "precypress:open": "yarn integration",
    "cypress:open": "node ./dist-tests/integration/cypress open",
    "release:prepare": "shipjs prepare",
    "release:trigger": "shipjs trigger"
  },
  "author": {
    "name": "Markus Wolf",
    "email": "knister.peter@shadowrun-clan.de"
  },
  "repository": {
    "type": "git",
    "url": "KnisterPeter/tsdi"
  },
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "8.2.0",
    "@commitlint/config-conventional": "8.2.0",
    "@commitlint/travis-cli": "8.2.0",
    "@istanbuljs/nyc-config-typescript": "0.1.3",
    "@knisterpeter/standard-tslint": "1.7.2",
    "@types/chai": "4.2.4",
    "@types/debug": "4.1.5",
    "@types/mocha": "5.2.7",
    "@types/node": "12.12.0",
    "@types/shelljs": "0.8.5",
    "chai": "4.2.0",
    "codecov": "3.6.1",
    "cypress": "3.6.0",
    "husky": "3.0.9",
    "lint-staged": "9.4.2",
    "microbundle": "0.11.0",
    "mocha": "6.2.2",
    "nyc": "14.1.1",
    "prettier": "1.18.2",
    "rimraf": "3.0.0",
    "shelljs": "0.8.3",
    "shipjs": "0.8.0",
    "tslint": "5.20.0",
    "typescript": "3.6.4",
    "wait-on": "3.3.0"
  },
  "dependencies": {
    "reflect-metadata": "0.1.13"
  },
  "prettier": {
    "singleQuote": true
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "prettier --list-different"
    ],
    "lib/**/*.{ts,tsx}": [
      "yarn linter"
    ],
    "tests/!(integration)/**/*.{ts,tsx}": [
      "yarn linter:tests"
    ],
    "tests/integration/**/*.{ts,tsx}": [
      "yarn linter:integration"
    ]
  },
  "nyc": {
    "reporter": [
      "text",
      "lcovonly"
    ],
    "extends": "@istanbuljs/nyc-config-typescript",
    "#fixme": "https://github.com/istanbuljs/istanbuljs/issues/413",
    "#all": true,
    "exclude": [
      "dist-tests",
      "wallaby.js",
      "website/",
      "tests/integration/"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "renovate": {
    "extends": [
      "config:base"
    ],
    "lockFileMaintenance": {
      "enabled": true
    },
    "packageRules": [
      {
        "packagePatterns": [
          "^@types/"
        ],
        "automerge": true
      }
    ]
  }
}
