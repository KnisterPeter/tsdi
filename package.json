{
  "name": "tsdi",
  "version": "1.0.0-alpha.2",
  "description": "Dependency Injection container (IoC) for TypeScript",
  "main": "dist/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "files": [
    "dist",
    "lib"
  ],
  "bin": "dist/compiler/cli.js",
  "engines": {
    "node": ">=8.0.0"
  },
  "scripts": {
    "linter": "tslint --project ./tsconfig.json",
    "clean": "rimraf dist",
    "prebuild": "yarn clean",
    "build": "yarn build:cjs && yarn build:esm && yarn build:umd",
    "build:cjs": "tsc --project ./tsconfig.build.json --sourceMap --module commonjs --outDir dist",
    "build:esm": "tsc --project ./tsconfig.build.json --sourceMap --module esnext --outDir dist/esm",
    "build:umd": "rollup -c",
    "pretest": "yarn build",
    "test": "jest --logHeapUsage",
    "prerelease": "git checkout master && git pull origin master && yarn test && yarn build",
    "release": "standard-version",
    "postrelease": "git push --follow-tags origin master && npm publish",
    "precoverage": "yarn clean && tsc --project ./tsconfig.build.json --inlineSourceMap",
    "coverage": "codecov",
    "build:watch": "yarn build:cjs -- --watch",
    "test:watch": "yarn jest --watch --coverage=no"
  },
  "author": {
    "name": "Markus Wolf",
    "email": "knister.peter@shadowrun-clan.de"
  },
  "repository": {
    "type": "git",
    "url": "KnisterPeter/tsdi"
  },
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "8.0.0",
    "@commitlint/config-conventional": "8.0.0",
    "@commitlint/travis-cli": "8.0.0",
    "@knisterpeter/standard-tslint": "1.7.2",
    "@types/execa": "0.9.0",
    "@types/figlet": "1.2.0",
    "@types/jest": "24.0.15",
    "@types/lodash.kebabcase": "4.1.6",
    "@types/node": "9.6.22",
    "@types/prettier": "1.16.4",
    "@types/resolve-from": "4.0.0",
    "@types/webpack": "4.4.34",
    "codecov": "3.5.0",
    "cz-conventional-changelog": "2.1.0",
    "execa": "2.0.0",
    "husky": "2.5.0",
    "jest": "24.8.0",
    "lint-staged": "8.2.1",
    "rimraf": "2.6.3",
    "rollup": "1.16.2",
    "rollup-plugin-analyzer": "3.0.1",
    "rollup-plugin-commonjs": "10.0.0",
    "rollup-plugin-node-resolve": "5.1.0",
    "rollup-plugin-terser": "5.0.0",
    "standard-version": "6.0.1",
    "ts-jest": "24.0.2",
    "ts-loader": "6.0.3",
    "tslint": "5.18.0"
  },
  "dependencies": {
    "@oclif/command": "^1.5.11",
    "@oclif/config": "^1.12.9",
    "@oclif/plugin-help": "^2.1.6",
    "figlet": "^1.2.1",
    "lodash.kebabcase": "^4.1.1",
    "prettier": "1.18.2",
    "reflect-metadata": "0.1.13",
    "resolve-from": "^5.0.0",
    "ts-morph": "^1.2.0",
    "typescript": "3.4.5",
    "webpack": "4.35.0"
  },
  "lint-staged": {
    "lib/**/*.{ts,tsx}": [
      "npm run linter --",
      "prettier --list-different"
    ],
    "tests/**/*.{ts,tsx}": [
      "npm run linter --",
      "prettier --list-different"
    ]
  },
  "prettier": {
    "singleQuote": true
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "watchPathIgnorePatterns": [
      "<rootDir>/tests/compiler/webpack-.*/output.js",
      "<rootDir>/tests/compiler/webpack-.*/src/container-impl.ts"
    ],
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "lib/compiler/cli.ts",
      "lib/compiler/decorators.ts"
    ],
    "collectCoverageFrom": [
      "lib/**"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.build.json",
        "isolatedModules": false
      }
    }
  },
  "renovate": {
    "extends": [
      "config:base"
    ],
    "semanticPrefix": "chore:",
    "lockFileMaintenance": {
      "enabled": true
    },
    "packageRules": [
      {
        "packagePatterns": [
          "^@types/"
        ],
        "automerge": true
      }
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  }
}
