{
  "name": "tsdi",
  "version": "0.21.0",
  "description": "Dependency Injection container (IoC) for TypeScript",
  "source": "lib/index.ts",
  "main": "dist/index.js",
  "umd:main": "dist/index.umd.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=10.0.0"
  },
  "scripts": {
    "linter": "tslint --project ./tsconfig.json",
    "linter:tests": "tslint --project ./tests/tsconfig.json",
    "clean": "rimraf .nyc_output coverage dist dist-tests",
    "prebuild": "yarn clean",
    "build": "microbundle",
    "pretest": "tsc --project ./tests/tsconfig.json",
    "test": "nyc --reporter=text --reporter=lcov mocha dist-tests",
    "coverage": "nyc report --reporter=lcov && codecov",
    "release:prepare": "shipjs prepare",
    "release:trigger": "shipjs trigger"
  },
  "author": {
    "name": "Markus Wolf",
    "email": "knister.peter@shadowrun-clan.de"
  },
  "repository": {
    "type": "git",
    "url": "KnisterPeter/tsdi"
  },
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "8.2.0",
    "@commitlint/config-conventional": "8.2.0",
    "@commitlint/travis-cli": "8.2.0",
    "@knisterpeter/standard-tslint": "1.7.2",
    "@types/chai": "4.2.3",
    "@types/debug": "4.1.5",
    "@types/mocha": "5.2.7",
    "@types/node": "12.7.12",
    "chai": "4.2.0",
    "codecov": "3.6.1",
    "cz-conventional-changelog": "3.0.2",
    "husky": "3.0.8",
    "lint-staged": "9.4.2",
    "microbundle": "^0.11.0",
    "mocha": "6.2.1",
    "nyc": "12.0.1",
    "prettier": "1.18.2",
    "rimraf": "3.0.0",
    "shipjs": "^0.6.0",
    "tslint": "5.20.0",
    "typescript": "3.6.4"
  },
  "dependencies": {
    "reflect-metadata": "0.1.13"
  },
  "prettier": {
    "singleQuote": true
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "prettier --list-different"
    ],
    "lib/**/*.{ts,tsx}": [
      "yarn linter"
    ],
    "tests/**/*.{ts,tsx}": [
      "yarn linter:tests"
    ]
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "all": true,
    "check-coverage": true,
    "include": [
      "dist/**"
    ],
    "exclude": [
      "dist/index.umd.js"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  }
}
