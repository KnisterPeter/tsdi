{
  "compilerOptions": {
    "declaration": true,
    "target": "es2017",
    "module": "esnext",
    "outDir": "dist",
    "lib": ["dom", "esnext"],
    "rootDir": "lib",
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "stripInternal": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "sourceMap": true
  },
  "include": ["lib/"]
}
