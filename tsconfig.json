{
  "compilerOptions": {
    "declaration": true,
    "target": "es5",
    "module": "es2015",
    "outDir": "dist/esm",
    "lib": [
      "es2015",
      "es2016",
      "es2017"
    ],
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "stripInternal": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "index.d.ts"
  ]
}
